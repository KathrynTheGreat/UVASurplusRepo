@page "{id:int?}"
@model UVASurplus.Pages.Requests.Items.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.ID" />
            <div class="form-group">
                <label asp-for="Item.RequestID" class="control-label"></label>
                <select asp-for="Item.RequestID" class="form-control" asp-items="ViewBag.RequestID"></select>
                <span asp-validation-for="Item.RequestID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.AssetTag" class="control-label"></label>
                <input asp-for="Item.AssetTag" class="form-control" />
                <span asp-validation-for="Item.AssetTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.ItemType" class="control-label"></label>
                <input asp-for="Item.ItemType" class="form-control" />
                <span asp-validation-for="Item.ItemType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.ItemDescription" class="control-label"></label>
                <input asp-for="Item.ItemDescription" class="form-control" />
                <span asp-validation-for="Item.ItemDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Quantity" class="control-label"></label>
                <input asp-for="Item.Quantity" class="form-control" />
                <span asp-validation-for="Item.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Condition" class="control-label"></label>
                <input asp-for="Item.Condition" class="form-control" />
                <span asp-validation-for="Item.Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Comments" class="control-label"></label>
                <input asp-for="Item.Comments" class="form-control" />
                <span asp-validation-for="Item.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Serial" class="control-label"></label>
                <input asp-for="Item.Serial" class="form-control" />
                <span asp-validation-for="Item.Serial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.EquipmentType" class="control-label"></label>
                <input asp-for="Item.EquipmentType" class="form-control" />
                <span asp-validation-for="Item.EquipmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Manufacturer" class="control-label"></label>
                <input asp-for="Item.Manufacturer" class="form-control" />
                <span asp-validation-for="Item.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Model" class="control-label"></label>
                <input asp-for="Item.Model" class="form-control" />
                <span asp-validation-for="Item.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@Model.Item.RequestID">Back to Request</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
